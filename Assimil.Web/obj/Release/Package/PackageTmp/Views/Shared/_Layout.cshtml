<!DOCTYPE html>

<html ng-app="assimil">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/angular")
    @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>

    <div class="body-content-loading-overlay" style="">
        <div class="body-content-loading-spinner"></div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Assimil", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container body-content">
      
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Thong Company  </p>
        </footer>
    </div>
</body>
</html>
